<% include ../partials/header %>

<form action="/register" method="POST">
    <div class="row" style="padding: 20px 5px; margin-top : 40px;">
        <div class="col s2 l3"></div>
        <div id="status" class="col s8 l6"
            style="min-height : 70px; border-radius : 10px; padding : 10px 20px; text-align : center; color : red;">
        </div>
        <div class="col s2 l3"></div>
    </div>
    
    <div class="row" style="padding: 20px 5px; ">
        <div class="col s3"></div>
        <div class="col s6">
            <input placeholder="username" name="username" type="text" id="email">
        </div>
        <div class="col s3"></div>
    </div>
    <div class="row" style="padding: 20px 5px; ">
        <div class="col s3"></div>
        <div class="col s6">
            <input placeholder="Aadhar Number" name="aadhar" type="text" id="aadhar">
        </div>
        <div class="col s3"></div>
    </div>
    <div class="row" style="padding: 20px 5px;">
        <div class="col s3"></div>
        <div class="col s6">
            <input placeholder="Password" name="password" type="password" id="pwd">
        </div>
        <div class="col s3"></div>
    </div>
    <div class="row" style="padding: 20px 5px; text-align: center;">
    
        <div class="col s3"></div>
        <div class="col s6">
            <button class="waves-effect waves-light btn" id="submit">Submit</button>
        </div>
        <div class="col s3"></div>
    </div>
</form>

<% include ../partials/footer %>